<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="top_headline">欲しいコスメ一覧</h2>
    </div>
    <div class="col-12">
      <div class="index_wants_link">
      <%= link_to "欲しいコスメを登録する", new_want_path, class:"btn btn-success" %>
      </div>
    </div>
  </div>
  <div class="row">
  	<div class="col-12">
  	  <% @wants.each do |want| %>
  	    <div class="top_cosme">
  	    	<%= link_to want_path(want) do %>
		  	  <div class="top_cosme_items">
		  	     <%= attachment_image_tag want, :image, class:"img-square border", width:"100%", height:"90%" %>
              <div class="top_cosme_items_text">
                <%= want.brand.name %> <%= want.product_name %> <%= want.created_at.strftime('%Y/%m/%d') %>
              </div>
		  	  </div>
		  	<% end %>
		  	</div>
  	  <% end %>
  	</div>
  </div>
</div>