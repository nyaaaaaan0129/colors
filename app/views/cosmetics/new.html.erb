<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <h2 class="cosmetic_new_header">
        新しい化粧品を登録する
      </h2>
      <div class="new_cosmetic_links">
        <div class="new_cosme_genre_link">
          <%= link_to "化粧品ジャンルを増やす", new_genre_path, class:"btn btn-success" %>
        </div>
        <div class="new_color_genre_link">
          <%= link_to "色ジャンルを増やす", new_color_genre_path, class:"btn btn-success" %>
        </div>
      </div>
      <div class="cosmetic_new_form">
        <%= form_for(@cosme) do |form| %>
          <div class="field">
            <%= form.label :ブランド %>
            <%= form.text_field :brand_name %>
          </div>
          <div class="field">
            <%= form.label :商品名 %>
            <%= form.text_field :product_name %>
          </div>
          <div class="field">
          	<%= form.attachment_field :image %>
          </div>
          <div class="field">
            <%= form.label :色① %>
            <%= form.text_field :color1 %>
          </div>
          <div class="field">
            <%= form.label :色② %>
            <%= form.text_field :color2 %>
          </div>
          <div class="actions">
            <%= form.submit "登録する", class:"btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-2"></div>
  </div>
</div>