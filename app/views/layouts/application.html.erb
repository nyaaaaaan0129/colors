<!DOCTYPE html>
<html>
  <head>
    <title>Colors</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="wrapper">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <%= link_to "Colors", root_path, class:"navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <% if user_signed_in? %>
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <%= link_to "欲しいコスメリスト", wants_path, class:"nav-link" %>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  コスメ管理
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <%= link_to "新規投稿", new_cosmetic_path, class:"dropdown-item", data: {"turbolinks" => false} %></a>
                  <%= link_to "コスメ一覧", cosmetics_path(key:0), class:"dropdown-item" %></a>
                  <div class="dropdown-divider"></div>
                  <%= link_to "期限切れコスメ一覧", cosmetics_path, class:"dropdown-item" %></a>
                </div>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"nav-link" %>
              </li>
            </ul>
          <% else %>
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <%= link_to "About colors", wants_path, class:"nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "新規登録", new_user_registration_path, class:"nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class:"nav-link" %>
              </li>
            </ul>
          <% end %>
        </div>
　　   </nav>
      <%= yield %>
      </div>
      <footer>
        <div class="footer"></div>
      </footer>
  </body>
</html>
